# MongoDB Enterprise Advanced Kubernetes Environment Variables - Ubuntu
# Copy this file to .env and update the values as needed

# Kubernetes cluster context (Ubuntu options)
K8S_CTX="minikube"  # or "kind-kind" or "microk8s"

# MongoDB namespace
MDB_NS="mongodb"

# MongoDB resource name
MDB_RESOURCE_NAME="mdb-rs"

# MongoDB version
MDB_VERSION="8.2.1-ent"

# Ops Manager configuration
OPS_MANAGER_PROJECT_NAME="search-project"
OPS_MANAGER_API_URL="https://localhost:8080"

# User passwords (CHANGE THESE!)
MDB_ADMIN_USER_PASSWORD="admin-user-password-CHANGE-ME"
MDB_USER_PASSWORD="mdb-user-password-CHANGE-ME"
MDB_SEARCH_SYNC_USER_PASSWORD="search-sync-user-password-CHANGE-ME"

# Connection string for applications
MDB_CONNECTION_STRING="mongodb://mdb-user:${MDB_USER_PASSWORD}@${MDB_RESOURCE_NAME}-svc.${MDB_NS}.svc.cluster.local:27017/searchdb?replicaSet=${MDB_RESOURCE_NAME}"


